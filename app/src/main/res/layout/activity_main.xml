<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yzj.bluetoothtest.MainActivity">

    <Button
        android:id="@+id/open_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启蓝牙"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/close_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/open_bluetooth"
        android:text="关闭蓝牙"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/search_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/close_bluetooth"
        android:text="搜索蓝牙"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_bluetooth"
        android:text="发送数据"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/bluetooth_list"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/send_message">
    </ListView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/bluetooth_list"/>

    <ListView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/image">
    </ListView>

</RelativeLayout>
